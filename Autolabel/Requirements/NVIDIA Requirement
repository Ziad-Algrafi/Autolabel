
# Windows 

# open cmd and enter the path where you want to create your enviroment
cd path\to\your\desired\directory

# create python venv enviroment
python -m venv myenv

# Activate your enviroment
.\myenv\Scripts\activate

# Install the ultralytics package from PyPI
pip install ultralytics

# For GPU installation with NVIDIA GPU

# You need cuda toolkit for it to work

# Minimum
pip install torch==1.13.1+cu102 torchvision==0.14.1+cu102 -f https://download.pytorch.org/whl/torch_stable.html

# Recommended
pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118


//////////////////////


# linux
sudo apt install git python3-pip python3-venv

python3 -m venv venv

. venv/bin/activate

# Install the ultralytics package from PyPI
pip install ultralytics


# For GPU installation with NVIDIA GPU

# You need cuda toolkit for it to work

# Minimum
pip install torch==1.13.1+cu102 torchvision==0.14.1+cu102 -f https://download.pytorch.org/whl/torch_stable.html

# Recommended
pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/cu118




