# Windows 

# open cmd and enter the path where you want to create your enviroment
cd path\to\your\desired\directory

# create python venv enviroment
python -m venv myenv

# Activate your enviroment
.\myenv\Scripts\activate

# Install the ultralytics package from PyPI
pip install ultralytics

# For GPU installation with AMD GPU refer to pytorch, at this moment pytorch doesnt support amd on windows you will have to go with CPU

pip3 install torch torchvision torchaudio



//////////////////////


# linux
sudo apt install git python3-pip python3-venv

python3 -m venv venv

. venv/bin/activate

# Install the ultralytics package from PyPI
pip install ultralytics


# For GPU installation with AMD GPU

# You need Amd rocm for it to work

# Minimum
pip install torch==1.13.1+rocm5.2 torchvision==0.14.1+rocm5.2 torchaudio==0.13.1 --extra-index-url https://download.pytorch.org/whl/rocm5.2

# Recommended
pip3 install torch torchvision torchaudio --index-url https://download.pytorch.org/whl/rocm5.7





